---
import Layout from '../layouts/Layout.astro';

const posts = (await Astro.glob('../pages/posts/*.md')).reverse();
---

<Layout>
	<article>
		<ul>
			{posts.map(post => (
				<li>
					<a href={post.url}>
						<span>{post.frontmatter.date}</span>
						<span>{post.frontmatter.title}</span>
					</a>
				</li>
			))}
		</ul>
		<ul>
			<li>
				<a href="https://gloxi.net">GLOXINIA</a>
			</li>
		</ul>
	</article>
</Layout>
